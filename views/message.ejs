<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/message.css" />
    <title>Message from <%=message.user%></title>
  </head>
  <body>
    <nav>
      <a href="/">
        <button class="btn back-btn">Back</button>
      </a>
      <div class="message-user">
        <img src="/avatar-<%=message.avatar%>.svg" alt="" />
        <span><%=message.username%></span>
      </div>
    </nav>
    <div class="message">
      <div>
        <h1><%=message.title%></h1>
        <p>
          <%=message.created_at.toDateString() %>
          <%=message.created_at.getUTCHours() %>:<% if
          (message.created_at.getUTCMinutes() < 10)
          {%>0<%=message.created_at.getUTCMinutes()%> <% } else {
          %><%=message.created_at.getUTCHours() %> <% } %>
        </p>
        <a href="/new/<%=message.username%> "
          ><button class="btn reply-btn">reply</button></a
        >
      </div>

      <p><%=message.text%></p>
    </div>
    <div class="other-messages">
      <% if (otherMessagesByUser.length !== 0) { %>
      <h1>Other Messages by <%=message.username %></h1>
      <% otherMessagesByUser.forEach((message)=>{ %>
      <div class="other-message-container">
        <div class="other-message">
          <div>
            <h2><%=message.title%></h2>
            <p>
              <%=message.created_at.toDateString() %>
              <%=message.created_at.getUTCHours() %>:<% if
              (message.created_at.getUTCMinutes() < 10)
              {%>0<%=message.created_at.getUTCMinutes()%> <% } else {
              %><%=message.created_at.getUTCHours() %> <% } %>
            </p>
            <a href="/message/<%=message.id%>"
              ><button class="btn open-btn">open</button></a
            >
          </div>
          <p><%=message.text %></p>
        </div>
      </div>
      <% }) %> <% } %>
    </div>
  </body>
</html>
